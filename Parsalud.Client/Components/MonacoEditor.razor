@inherits FormComponent<string>

@if (Visible)
{
    <div class="d-flex gap-2 mb-2 align-items-center" style="height:40px">
        <span>
            <ButtonWithTooltip Icon="format_indent_increase"
                               TooltipText="Indentar código"
                               Click="Indent" />
        </span>
        <span>
            @Tools
        </span>
    </div>
    <StandaloneCodeEditor @ref="@editor"
                          @attributes="Attributes"
                          Id="@GetId()"
                          OnKeyUp="OnInput"
                          ConstructionOptions="EditorConstructionOptions" />
}