@page "/Dashboard/PostCategory/Create"
@page "/Dashboard/PostCategory/{Id:guid}/Update"
@page "/Dashboard/PostCategory/{Id:guid}/View"

@inherits BaseAbm<PostCategoryModel, IPostCategoryService, ParsaludPostCategory, ManagePostCategoryRequest, PostCategorySearchCriteria>

<PageTitle>@Action("Nueva", "Editar", "Ver") categoría - Dashboard Parsalud</PageTitle>

<RadzenCard>
    <RadzenText TextStyle="TextStyle.H2" TagName="TagName.H2">@Action("Nueva", "Editar", "Ver") categoría</RadzenText>
    <RadzenTemplateForm TItem="PostCategoryModel" Data="Model" Submit="Submit">
        <RadzenStack>
            <RadzenRow>
                <RadzenColumn SizeMD="6">
                    <RadzenFormField class="rz-w-100" Text="Nombre">
                        <RadzenTextBox Trim="true" Name=@nameof(Model.Name) ReadOnly="@ReadOnly" @bind-Value=@Model.Name />
                    </RadzenFormField>
                    <RadzenRequiredValidator Component=@nameof(Model.Name) Text="Nombre es requerido" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenStack Orientation="Orientation.Horizontal">
                @if (!ReadOnly)
                {
                    <RadzenButton class="rz-w-fit-content" ButtonType="ButtonType.Submit" Text=@Action("Crear", "Guardar cambios") Icon="save" IsBusy=@IsBusy BusyText=@Action("Creando...", "Actualizando...") />
                }
                <RadzenButton class="rz-w-fit-content" ButtonStyle="ButtonStyle.Secondary" Text=@(ReadOnly ? "Volver" : "Descartar") Icon="keyboard_return" Click="Discard" />
            </RadzenStack>
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenCard>